<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tVHeaderResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ergebnis"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/tvResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tVHeaderResult"
        android:text="2000 Euro"
        android:textSize="40sp" />

    <Button
        android:id="@+id/bNewCalculation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvResult"
        android:text="Neue Berechnung"
        android:textSize="20sp" />

    <Button
        android:id="@+id/bShowOverview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bNewCalculation"
        android:text="Berechnungsverlauf"
        android:textSize="20sp" />

</RelativeLayout>