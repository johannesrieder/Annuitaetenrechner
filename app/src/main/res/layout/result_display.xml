<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="60dp"
        android:layout_marginRight="40dp"
        android:text="Ergebnis"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/tVErgebnis"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/tvHeader"
        android:text="2000 Euro"
        android:textAlignment="center"
        android:gravity="center"
        android:textSize="40sp"
        android:background="@android:color/holo_orange_dark"/>

    <TextView
        android:id="@+id/tVBetrag"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tVErgebnis"
        android:text="Betrag: 140000 EURO"
        android:textSize="20sp"
        android:background="@android:color/holo_orange_light"/>

    <TextView
        android:id="@+id/tVLaufzeit"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tVBetrag"
        android:text="Laufzeit: 15 Jahre"
        android:textSize="20sp"
        android:background="@android:color/holo_orange_light"/>

    <TextView
        android:id="@+id/tVZinssatz"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tVLaufzeit"
        android:text="Zinssatz: 5 %"
        android:textSize="20sp"
        android:background="@android:color/holo_orange_light"/>

    <Button
        android:id="@+id/bNeueBerechnung"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="120dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tVZinssatz"
        android:text="Neue Berechnung"
        android:textSize="20sp"
        android:background="@drawable/transparent_bg_bordered_button"
        />

    <Button
        android:id="@+id/bBerechnungsverlauf"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="80dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bNeueBerechnung"
        android:text="Berechnungsverlauf"
        android:textSize="20sp"
        android:background="@drawable/transparent_bg_bordered_button"
        />



</RelativeLayout>