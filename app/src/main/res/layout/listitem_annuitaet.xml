<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_margin="5dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/v_listItem_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_view"
            android:clickable="true">
        </TextView>

        <TextView
            android:id="@+id/tV_listItem_annuitaet"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_centerVertical="true"

            android:padding="5dp"

            android:background="@drawable/rounded_textview"
            android:textSize="20sp"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/tV_listItem_datum"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_toLeftOf="@id/bLöschen"
            android:layout_centerVertical="true"

            android:padding="5dp"

            android:textSize="10sp"
            android:textColor="@android:color/white" />

        <ImageView
            android:id="@+id/bLöschen"
            android:src="@drawable/delete_button"

            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignEnd="@id/v_listItem_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_centerVertical="true"
            />


        <TextView
            android:id="@+id/tV_listItem_darlehenssumme"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:layout_below="@id/tV_listItem_annuitaet"

            android:paddingTop="5dp"

            android:textSize="20sp"
            android:textColor="@android:color/white"
            android:background="@color/colorAccent"

            android:visibility="visible"/>

        <TextView
            android:id="@+id/tV_listItem_zinssatz"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_below="@id/tV_listItem_darlehenssumme"

            android:padding="5dp"

            android:textSize="20sp"
            android:textColor="@android:color/white"
            android:background="@color/colorAccent"/>

        <TextView
            android:id="@+id/tV_listItem_laufzeit"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_below="@id/tV_listItem_zinssatz"

            android:padding="5dp"

            android:textSize="20sp"
            android:textColor="@android:color/white"
            android:background="@color/colorAccent"/>

        <TextView
            android:id="@+id/tV_listItem_kommentar"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_below="@id/tV_listItem_laufzeit"

            android:padding="5dp"

            android:textSize="20sp"
            android:textColor="@android:color/white"
            android:background="@color/colorAccent"/>


    </RelativeLayout>

</LinearLayout>