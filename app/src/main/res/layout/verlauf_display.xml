<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Verlauf"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
        android:id="@+id/tVTitel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Berechnungsverlauf"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textSize="30sp"
        android:textColor="#212121"/>

    <ImageView
        android:id="@+id/iVhelpicon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="right"
       android:layout_toRightOf="@+id/tVTitel"
        android:src="@drawable/help"
        android:layout_marginStart="15dp"
        android:layout_marginTop="3dp"
        android:clickable="true"
        android:onClick="onClick"/>

    <TextView
        android:id="@+id/Trennlinie1"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="#373737"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/iVhelpicon" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/annuitaet_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/Trennlinie1"/>


     <TextView
         android:id="@+id/Trennlinie2"
         android:layout_width="match_parent"
         android:layout_height="4dp"
         android:background="#373737"
         android:layout_marginTop="20dp"
         android:layout_below="@+id/annuitaet_recycler" />

        <Button
        android:id="@+id/HStartseiteButton"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Neue Berechnung"
        android:layout_below="@+id/Trennlinie2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:textSize="20sp"
        android:background="@drawable/bordered_button_rieder" />

    </RelativeLayout>


</ScrollView>