<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/Activityname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AnnuitÃ¤t berechnen"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/Trennlinie1"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="#000000"
        android:layout_below="@+id/Activityname" />

    <ImageView
        android:id="@+id/Sparschwein"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/sparschwein"
        android:layout_below="@+id/Trennlinie1"/>

    <TextView
        android:id="@+id/Trennlinie2"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="#000000"
        android:layout_below="@+id/Sparschwein" />

    <TextView
        android:id="@+id/Darlehenssumme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Darlehenssumme"
        android:layout_below="@+id/Trennlinie2"/>


    <EditText
        android:id="@+id/DarlehenssummeEingabe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Trennlinie2"
        android:layout_toRightOf="@+id/Darlehenssumme"
        android:text="In Euro" />

</RelativeLayout>